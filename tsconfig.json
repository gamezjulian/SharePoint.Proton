{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "scripthost"
    ],
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": false,
    "watch": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".vscode",
    "node_modules",
    "dist"
  ]
}